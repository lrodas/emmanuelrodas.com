import Layout from '../layouts/Layout.astro';
import { ui, content, defaultLang } from '../i18n/ui';
import profileImage from '../assets/profile.jpeg';

export interface Props {
  lang: 'en' | 'es';
}

// Type definitions for content
interface PortfolioItem {
  title: string;
  description: string;
  image: string;
  tags: string[];
}

interface Reference {
  name: string;
  role: string;
  company: string;
  contact: string;
}

const { lang } = Astro.props;

const t = ui[lang];
const c = content[lang];

const portfolioItems: PortfolioItem[] = c.portfolio as PortfolioItem[];
const trajectory = c.trajectory;
const techStack = c.techStack;
const certifications = c.certifications;
const references: Reference[] = c.references as Reference[];

const currentPath = Astro.url.pathname;
const isSpanish = lang === 'es';

let switchPath;
if (isSpanish) {
  switchPath = currentPath.replace(/^\/es/, '') || '/';
} else {
  const cleanPath = currentPath.replace(/^\/en/, '') || '/';
  switchPath = cleanPath === '/' ? '/es' : `/es${cleanPath}`;
}
